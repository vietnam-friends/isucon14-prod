# ISUCON分析ツールキット設定ファイル
# 本番環境に合わせて以下の値を変更してください

# サーバー接続設定
APP_SERVER_IP="57.180.65.12"
BENCH_SERVER_IP="13.115.146.218"
SSH_USER="ubuntu"
SSH_KEY_PATH="$HOME/Downloads/isucon14.pem"
TOOLKIT_REMOTE_DIR="/home/ubuntu/isucon_toolkit"

# 接続文字列（自動生成）
APP_SERVER="${SSH_USER}@${APP_SERVER_IP}"
BENCH_SERVER="${SSH_USER}@${BENCH_SERVER_IP}"

# データベース設定
DB_NAME="isuride"
DB_USER="root"
DB_PASSWORD=""
DB_HOST="localhost"
DB_PORT="3306"

# MySQL接続方式設定
# sudo: sudo mysql ${DB_NAME} を使用（パスワード不要）
# auth: mysql -u${DB_USER} -p${DB_PASSWORD} -h${DB_HOST} -P${DB_PORT} ${DB_NAME} を使用
MYSQL_AUTH_MODE="sudo"

# アプリケーション設定
APP_PATH="/home/isucon/webapp"
APP_SERVICE="isuride-go.service"
APP_USER="isucon"

# Nginx設定
NGINX_CONFIG_PATH="/etc/nginx/nginx.conf"
NGINX_ACCESS_LOG="/var/log/nginx/access.log"
NGINX_SERVICE="nginx"

# pprof設定
PPROF_PORT="6060"
PPROF_HOST="localhost"

# MySQL設定ファイルパス（優先順位順）
MYSQL_CONFIG_PATHS=(
    "/etc/mysql/mysql.conf.d/mysqld.cnf"
    "/etc/mysql/my.cnf"
    "/etc/my.cnf"
    "/usr/local/etc/my.cnf"
    "$HOME/.my.cnf"
)

# ログ設定
LOG_LEVEL="info"  # debug, info, warn, error
ENABLE_COLOR_OUTPUT="true"

# 分析設定
DEFAULT_SLOWQUERY_THRESHOLD="0"
DEFAULT_ALP_LIMIT="20"
DEFAULT_PPROF_DURATION="30s"